{
  "compilerOptions": {
    "outDir": "build",
    "module": "CommonJS",
    "target": "ES2019",
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017",
      "ES2018",
      "ES2019"
    ],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react-native",
    "declaration": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "typeRoots": [
      "/node_modules/@types",
      "/Types/"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}